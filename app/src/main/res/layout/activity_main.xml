<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="8dp"
        tools:context=".MainActivity">

        <TextView
            android:id="@+id/tv_questionNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textColor="@color/black"
            android:textSize="16sp"
            tools:text="Question #01" />

        <TextView
            android:id="@+id/tv_question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center_horizontal"
            android:textColor="@color/black"
            android:textSize="16sp"
            tools:text="Who is this superhero?" />

        <ImageView
            android:id="@+id/iv_hero"
            android:layout_width="@dimen/image_width"
            android:layout_height="@dimen/image_height"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            tools:src="@drawable/hulk" />

        <RadioGroup
            android:id="@+id/answerRadioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center_horizontal"
            android:visibility="visible">

            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/iron_man"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/hulk"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/thor"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/spider_man"
                android:textColor="@color/black"
                android:textSize="16sp" />

        </RadioGroup>

        <LinearLayout
            android:id="@+id/vg_question2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <CheckBox
                android:id="@+id/cb_mam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Martial Arts Master" />

            <CheckBox
                android:id="@+id/cb_wm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Weapons Master" />

            <CheckBox
                android:id="@+id/cb_gi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Genius Intellect" />

            <CheckBox
                android:id="@+id/cb_ms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Magic Spells" />
        </LinearLayout>

        <EditText
            android:id="@+id/et_question3"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:inputType="textCapWords"
            android:visibility="gone" />


        <RadioGroup
            android:id="@+id/answerRadioGroup_question4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center_horizontal"
            android:visibility="gone">

            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/radio_true"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/radio_false"
                android:textColor="@color/black"
                android:textSize="16sp" />

        </RadioGroup>

        <Button
            android:id="@+id/btn_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:text="@string/next" />

    </LinearLayout>
</ScrollView>